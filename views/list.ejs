<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</head>
<style>
    .label-success{
        background-color: green;
    }
    .label-warning{
        background-color: red;
    }
</style>
<body>
    <div class="container">
        <div row>
            <div class="col-xs-12 col-lg-8 col-lg-offset-2">
                <div class="row">
                    <h2 class="col-xs-6">記帳本</h2>
                    <h2 class="col-xs-6 text-right"><a class="btn btn primary" href="/account/create">點擊添加</a></h2>
                </div>
                <hr>
                    <div class="account">
                        <% account.forEach(item => {%>
                        <div class="panel panel-danger">
                            <div class="panel-danger"><%=moment(item.time).format('YYYY-MM-DD')%></div>
                            <div class="panel-body">
                                <div class="col-xs-6"><%=item.what%></div>
                                <div class="col-xs-2 text-center">
                                    <span class="label <%=item.type=== -1 ?'label-success':'label-warning'%>"><%=item.type=== -1 ?'支出':'收入'%></span>
                                </div>
                                <div class="col-xs-2 text-right"><%=item.much%></div>
                                <div class="col-xs-2 text-right">
                                    <a class="delBtn" href="/account/<%=item.id%>">刪除</a>
                                </div>
                            </div>
                        </div>
                        <%})%>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
<script>
    let delBtn = document.querySelectorAll('.delBtn');

    delBtn.forEach(item=>{
        item.addEventListener('click',function(e){
            if(confirm('確定刪除嗎?')){
                return true;
            }
            else{
                e.preventDefault();
            }
        })
    })
</script>
</html>